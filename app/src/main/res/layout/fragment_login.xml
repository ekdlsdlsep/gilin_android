<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#E8CE76"
    tools:context=".dain.Login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="95dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="130dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gilin"/>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="283dp"
            android:background="@drawable/login_round"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/login_id"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_round2"
                android:inputType="text"
                android:hint="ID"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_marginBottom="25dp"
                android:background="@drawable/login_round2"/>

            <android.widget.Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_a"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="27dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/loginicon"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="8dp"
                    android:textColor="#919191"
                    android:text="로그인 상태 유지"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="32dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/login_join"
                android:layout_width="53dp"
                android:layout_height="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginRight="120dp"
                android:text="회원가입"/>

            <TextView
                android:layout_width="133dp"
                android:layout_height="20dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="36dp"
                android:text="아이디 / 비밀번호 찾기"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>